@model Omaha_market.Models.AccountModel

@{
    ViewData["Title"] = "Regist";
}

<h1>Regist</h1>



<h1 class="text-center">Dentist Booking form</h1>



<br />
<br />

<form href="#" method="post">
    <div class="bd">
        <div align="center">
            
            <div>
                Your name:
                <input type="text" asp-for="Name" placeholder="name" />

                <div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            </div>
            <br />
            <div>
                Your Phone number:
                <input type="tel" asp-for="PhoneNumber" placeholder="number of phone" />

                <div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

            </div>
            <br />
            <div>

                Your Email:
                <input type="email" asp-for="Email" placeholder="email" />

                <div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

            </div>

                 <br />
            <div>

                Your Address:
                <input type="text" asp-for="Address" placeholder="address" />

                <div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

            </div>
            <br />

            <div>

                Your Login:
                <input type="text" asp-for="Login" placeholder="Login" />

                <div>
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>

            </div>
            <br />
            <div>
                Your Password:
                <input type="password" asp-for="Password" placeholder="Password" />

                <div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

            </div>

            <br />

        <div class="text-center">
            <button type="submit"> regist </button>
        </div>

        <br />
    </div>
</form>

