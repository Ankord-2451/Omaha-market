@model IEnumerable<Omaha_market.Models.ProductModel>
@{
    ViewData["Title"] = "ShoppingCart";
}

<h1>ShoppingCart</h1>


@if (Model.Count() == 0)
{
    <div>Карзина Пуста</div>
}
else{
@foreach (var item in Model)
        {
        <div>
          <a asp-action="Details" asp-controller="Market" asp-route-id="@item.Id">
            <div class="justify-content-between">
                    <div><img src="~/Images/@item.Img" class="cart" /></div>
                    <div>@item.NameRu</div>
                    <div><a asp-action="DeleteSh" asp-controller="ShoppingCart" asp-route-id="@item.Id"><img src="~/Images/WebElements/крест.png" class="dcart" /></a></div>
            </div>
          </a>
        </div>
        <br />
        }
}
